{
  "compilerOptions": {
    "lib": ["es2022", "esnext", "dom", "dom.iterable"],
    "target": "ESNext",
    "module": "ESNext",
    "moduleDetection": "force",
    "verbatimModuleSyntax": true,
    "noEmit": false,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "useUnknownInCatchVariables": true,
    "noPropertyAccessFromIndexSignature": true,
    "outDir": "./dist"
  }, 
"include": ["src/**/*"
],
  "exclude": ["node_modules","src/assets","src/typings","src/__tests__","src/__mocks__","src/__fixtures__"],
}